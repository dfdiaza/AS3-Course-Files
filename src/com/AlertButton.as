package src.com{	import flash.display.Sprite;	import flash.display.SimpleButton;	import flash.display.Graphics;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;	import fl.motion.Color;	import flash.display.GradientType;	import flash.geom.Matrix;	import flash.display.SpreadMethod;	import flash.display.Shape;	public class AlertButton extends Sprite {		private var _w:Number;		private var _h:Number;		private var _rad:Number;		private var _linW:Number;		private var _lcol:uint; //lighter color of gradient		private var _dcol:uint; //darkter color of the gradient		private var _txt:String;		private var _txtCol:uint;		private var _lnCol:uint;		public function AlertButton(w:Number, h:Number, rad:Number, linW:Number, lightcol:uint, darkcol:uint, txt:String, txtCol:uint, lineCol:uint) {			_w = w;			_h = h;			_rad = rad;			_linW = linW;			_lcol = lightcol;			_dcol = darkcol;			_txt = txt;			_txtCol = txtCol			_lnCol = lineCol;						var btn:SimpleButton = createBtn();			addChild(btn);			var labl:TextField = createLabel();			labl.mouseEnabled = false;			labl.y = (_h - labl.height)/2			addChild(labl);		}				private function createBtn() { 			var btn:SimpleButton = new SimpleButton();			btn.upState = createRoundRect(_lcol,_dcol);			var ovCol:uint = Color.interpolateColor(_dcol, 0xFFFFFF, .3)			btn.overState = createRoundRect(_lcol,ovCol);			var dnCol:uint = Color.interpolateColor(_dcol, 0x000000, .3)			btn.downState = createRoundRect(_lcol,dnCol);			btn.hitTestState = btn.upState;			return btn;		}				private function createRoundRect(lcol:uint,dcol:uint):Shape {			//Gradient fill			var gradType:String = GradientType.LINEAR;			var spread:String = SpreadMethod.PAD;			var matrix:Matrix = new Matrix();			matrix.createGradientBox(_w,_h,90*(Math.PI/180),0,0);			var colors:Array = [lcol,dcol];			var alphas:Array = [0.9,0.9];			var ratios:Array = [0,255];						var rRect:Shape = new Shape();			//rRect.graphics.beginFill(col, .5);			rRect.graphics.beginGradientFill(gradType,colors,alphas,ratios,matrix);			rRect.graphics.lineStyle(_linW, _lnCol, 1);			rRect.graphics.drawRoundRect(0, 0, _w, _h, _rad);			rRect.graphics.endFill();			return rRect;		}				private function createLabel():TextField {			var txt:TextField = new TextField();			txt.width = _w;			txt.height = 22;			var format:TextFormat = new TextFormat();			format.font = "Verdana";			format.color = _txtCol;			format.size = 16;			format.bold = false;			format.align = TextFormatAlign.CENTER			txt.defaultTextFormat = format;			txt.text = _txt;			txt.selectable = false;						return txt;		}	}}